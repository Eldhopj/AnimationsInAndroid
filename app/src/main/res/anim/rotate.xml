<?xml version="1.0" encoding="utf-8"?>

<set xmlns:android="http://schemas.android.com/apk/res/android">

    <!--We use pivotX="50%" and pivotY="50%" to perform zoom from the center of the element-->
    <!--duration: Duration of the animation in which the animation should complete-->
    <!--interpolator : It is the rate of change in animation. We can define our own interpolator using the time as the constraint-->
    <!--repeatMode : useful when you want the animation to be repeat-->
    <!--repeatCount : This defines number of repetitions on animation-->

    <rotate android:fromDegrees="0"
        android:toDegrees="360"
        android:pivotX="50%"
        android:pivotY="50%"
        android:duration="600"
        android:repeatMode="restart"
        android:repeatCount="infinite"
        android:interpolator="@android:anim/cycle_interpolator"/>

</set>
